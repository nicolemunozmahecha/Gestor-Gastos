<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tds.vista.CrearAlertaController">
   <content>
      <VBox alignment="TOP_CENTER" spacing="15">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         <children>
            <VBox maxWidth="500" spacing="5">
               <children>
                  <Label text="Introduzca el nombre de la nueva alerta:" />
                  <TextField fx:id="campoNombreAlerta" maxWidth="Infinity" />
               </children>
            </VBox>
            
            <VBox maxWidth="500" spacing="5">
               <children>
                  <Label text="Introduzca el límite de gasto:" />
                  <TextField fx:id="campoLimiteGasto" maxWidth="Infinity" />
               </children>
            </VBox>
            
            <VBox maxWidth="500" spacing="10">
               <children>
                  <Label text="Elija el periodo de la alerta:" />
                  <HBox alignment="CENTER_LEFT" spacing="30">
                     <children>
                        <RadioButton fx:id="mensual" mnemonicParsing="false" text="MENSUAL">
                           <toggleGroup>
                              <ToggleGroup fx:id="periodoGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="semanal" mnemonicParsing="false" text="SEMANAL" toggleGroup="$periodoGroup" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <VBox maxWidth="500" spacing="5">
               <children>
                  <Label text="Elija la categoría de la alerta:" />
                  <MenuButton fx:id="categorias" maxWidth="200" mnemonicParsing="false" text="Categorias">
                     <items>
                        <CheckMenuItem fx:id="categoriaAlimenatacion" mnemonicParsing="false" text="Alimentacion" />
                        <CheckMenuItem fx:id="categoriaTransporte" mnemonicParsing="false" text="Transporte" />
                        <CheckMenuItem fx:id="categoriaEntretenimiento" mnemonicParsing="false" text="Entretenimiento" />
                     </items>
                  </MenuButton>
               </children>
            </VBox>
            
            <VBox maxWidth="500" spacing="10">
               <children>
                  <Label text="¿Desea activar la categoria?" />
                  <HBox alignment="CENTER_LEFT" spacing="30">
                     <children>
                        <RadioButton fx:id="activar" mnemonicParsing="false" text="SI">
                           <toggleGroup>
                              <ToggleGroup fx:id="activarGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="noActivar" mnemonicParsing="false" text="NO" toggleGroup="$activarGroup" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <HBox alignment="CENTER">
               <padding>
                  <Insets top="10" />
               </padding>
               <children>
                  <Button fx:id="atras" mnemonicParsing="false" onAction="#atras" text="Atrás" translateX="-20.0" />
                  <Button fx:id="crearAlerta" mnemonicParsing="false" onAction="#crearAlerta" text="Crear Alerta" styleClass="boton-exito" translateX="20.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
