<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tds.vista.VentanaPrincipalController">
   <children>
      <MenuBar useSystemMenuBar="false" VBox.vgrow="NEVER">
         <menus>
         <!--============= CUENTAS ==================-->
            <Menu mnemonicParsing="false" text="Cuentas">
               <items>
                  <MenuItem fx:id="menuCrearCuenta" mnemonicParsing="false" onAction="#crearCuenta" text="Crear Cuenta" />
                  <Menu fx:id="menuEliminarCuenta" mnemonicParsing="false" onAction="#eliminarCuenta" text="Eliminar Cuenta" />
                  <MenuItem fx:id="menuTotalCuenta" mnemonicParsing="false" onAction="#totalCuenta" text="Total Cuenta" />
               </items>
            </Menu>
            
			<!--============= GASTOS ==================-->
            <Menu mnemonicParsing="false" text="Gastos">
               <items>
                  <MenuItem fx:id="menuFiltrarGastos" mnemonicParsing="false" onAction="#filtrarGastos" text="Filtrar Gastos" />
               </items>
            </Menu>
            
			<!--============= CATEGORIAS ==================-->
            <Menu mnemonicParsing="false" text="Categorias">
               <items>
                  <MenuItem fx:id="menuCrearCategoria" mnemonicParsing="false" onAction="#crearCategoria" text="Crear Categoria" />
                  <Menu mnemonicParsing="false" text="Eliminar Categoria">
                     <items>
                        <MenuItem fx:id="menuEliminarCategoria1" mnemonicParsing="false" onAction="#eliminarCategoria" text="categoria 1" />
                        <MenuItem fx:id="menuEliminarCategoria2" mnemonicParsing="false" onAction="#eliminarCategoria" text="categoria 2" />
                     </items>
                  </Menu>
               </items>
            </Menu>
            
			<!--============= ALERTAS ==================-->
            <Menu mnemonicParsing="false" text="Alertas">
               <items>
                  <MenuItem fx:id="menuCrearAlerta" mnemonicParsing="false" onAction="#crearAlerta" text="Crear Alerta" />
                  <Menu fx:id="menuEliminarAlerta" mnemonicParsing="false" text="Eliminar Alerta" />
               </items>
            </Menu>
            
			<!--============= NOTIFICACIONES ==================-->
            <Menu mnemonicParsing="false" text="Notificaciones">
               <items>
                  <MenuItem fx:id="menuHistorialNotificaciones" mnemonicParsing="false" onAction="#mostrarHistorial" text="Historial" />
               </items>
            </Menu>

			<!--============= SALIR ==================-->
            <Menu mnemonicParsing="false" text="Salir">
               <items>
                  <MenuItem fx:id="menuSalir" mnemonicParsing="false" onAction="#salirAplicacion" text="Salir" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </children>
</VBox>
