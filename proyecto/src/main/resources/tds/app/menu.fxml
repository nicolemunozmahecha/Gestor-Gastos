<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tds.vista.VentanaPrincipalController"
      maxHeight="50.0" maxWidth="-Infinity" minHeight="-Infinity" minWidth="50.0"
      prefHeight="20.0" prefWidth="600.0">

   <children>
      <MenuBar prefHeight="20.0">

         <menus>

            <!-- ========= CUENTAS ========= -->
            <Menu text="Cuentas">
               <items>

                  <MenuItem fx:id="menuCrearCuenta"
                            text="Crear Cuenta"
                            onAction="#crearCuenta"/>

                  <Menu text="Eliminar Cuenta">
                     <items>
                        <MenuItem fx:id="menuEliminarCuenta1"
                                  text="cuenta 1"
                                  onAction="#eliminarCuenta" />
                        <MenuItem fx:id="menuEliminarCuenta2"
                                  text="cuenta 2"
                                  onAction="#eliminarCuenta" />
                     </items>
                  </Menu>

               </items>
            </Menu>

            <!-- ========= CATEGORÃAS ========= -->
            <Menu text="Categorias">
               <items>

                  <MenuItem fx:id="menuCrearCategoria"
                            text="Crear Categoria"
                            onAction="#crearCategoria" />

                  <Menu text="Eliminar Categoria">
                     <items>
                        <MenuItem fx:id="menuEliminarCategoria1"
                                  text="categoria 1"
                                  onAction="#eliminarCategoria"/>
                        <MenuItem fx:id="menuEliminarCategoria2"
                                  text="categoria 2"
                                  onAction="#eliminarCategoria"/>
                     </items>
                  </Menu>

               </items>
            </Menu>

            <!-- ========= ALERTAS ========= -->
            <Menu text="Alertas">
               <items>

                  <MenuItem fx:id="menuCrearAlerta"
                            text="Crear Alerta"
                            onAction="#crearAlerta"/>

                  <Menu text="Eliminar Alerta">
                     <items>
                        <MenuItem fx:id="menuEliminarAlerta1"
                                  text="alerta 1"
                                  onAction="#eliminarAlerta"/>
                        <MenuItem fx:id="menuEliminarAlerta2"
                                  text="alerta 2"
                                  onAction="#eliminarAlerta"/>
                     </items>
                  </Menu>

               </items>
            </Menu>

            <!-- ========= NOTIFICACIONES ========= -->
            <Menu text="Notificaciones">
               <items>
                  <MenuItem fx:id="menuHistorialNotificaciones"
                            text="Historial"
                            onAction="#mostrarHistorial"/>
               </items>
            </Menu>

            <!-- ========= SALIR ========= -->
            <Menu text="Salir">
               <items>
                  <MenuItem fx:id="menuSalir"
                            text="Salir"
                            onAction="#salirAplicacion"/>
               </items>
            </Menu>

         </menus>
      </MenuBar>
   </children>
</VBox>
