<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tds.vista.MostrarAlertasController">
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>
   <children>
      <TableView fx:id="tablaAlertas" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
            <TableColumn fx:id="colLimite" prefWidth="120.0" text="Límite" />
            <TableColumn fx:id="colPeriodo" prefWidth="120.0" text="Periodo" />
            <TableColumn fx:id="colCategoria" prefWidth="200.0" text="Categoría" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER" spacing="10">
         <children>
            <Button mnemonicParsing="false" onAction="#eliminarSeleccionada" text="Eliminar seleccionada" />
            <Button mnemonicParsing="false" onAction="#atras" text="Atrás" />
         </children>
      </HBox>
   </children>
</VBox>
