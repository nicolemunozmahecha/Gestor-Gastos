<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tds.vista.CrearGastoController">
   <content>
      <VBox alignment="TOP_CENTER" spacing="15">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
         </padding>
         <children>
            <VBox spacing="5" maxWidth="500">
               <children>
                  <Label text="Introduzca el nombre del nuevo gasto:" />
                  <TextField maxWidth="Infinity" />
               </children>
            </VBox>
            
            <VBox spacing="5" maxWidth="500">
               <children>
                  <Label text="Introduzca la cantidad de gasto:" />
                  <TextField maxWidth="Infinity" />
               </children>
            </VBox>
            
            <VBox spacing="5" maxWidth="500">
               <children>
                  <Label text="Introduzca la fecha del gasto:" />
                  <DatePicker maxWidth="Infinity" />
               </children>
            </VBox>
            
            <VBox spacing="5" maxWidth="500">
               <children>
                  <Label text="Introduzca la descripción del gasto:" />
                  <TextArea prefRowCount="3" wrapText="true" maxWidth="Infinity" />
               </children>
            </VBox>
            
            <VBox spacing="5" maxWidth="500">
               <children>
                  <Label text="Elija la categoría del gasto:" />
                  <MenuButton mnemonicParsing="false" text="Categorias" maxWidth="200">
                     <items>
                        <CheckMenuItem mnemonicParsing="false" text="categoria 1" />
                        <CheckMenuItem mnemonicParsing="false" text="categoria 2" />
                        <CheckMenuItem mnemonicParsing="false" text="categoria 3" />
                     </items>
                  </MenuButton>
               </children>
            </VBox>
            
            <VBox spacing="5" maxWidth="500">
               <children>
                  <Label text="Elija qué persona realizó el gasto:" />
                  <MenuButton mnemonicParsing="false" text="Personas" maxWidth="200">
                     <items>
                        <CheckMenuItem mnemonicParsing="false" text="Persona 1" />
                        <CheckMenuItem mnemonicParsing="false" text="Persona 2" />
                        <CheckMenuItem mnemonicParsing="false" text="Persona 3" />
                     </items>
                  </MenuButton>
               </children>
            </VBox>
            
            <HBox alignment="CENTER">
               <padding>
                  <Insets top="10" />
               </padding>
               <children>
                  <Button fx:id="crearGasto" mnemonicParsing="false" onAction="#crearGasto" text="Aceptar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
