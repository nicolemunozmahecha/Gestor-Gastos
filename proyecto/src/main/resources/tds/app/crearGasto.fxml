<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tds.vista.CrearGastoController">
   <content>
      <VBox alignment="TOP_CENTER" spacing="15">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         <children>
            <VBox maxWidth="500" spacing="5">
               <children>
                  <Label text="Introduzca el nombre del nuevo gasto:" />
                  <TextField maxWidth="Infinity" />
               </children>
            </VBox>
            
            <VBox maxWidth="500" spacing="5">
               <children>
                  <Label text="Introduzca la cantidad de gasto:" />
                  <TextField maxWidth="Infinity" />
               </children>
            </VBox>
            
            <VBox maxWidth="500" spacing="5">
               <children>
                  <Label text="Introduzca la fecha del gasto:" />
                  <DatePicker maxWidth="Infinity" />
               </children>
            </VBox>
            
            <VBox maxWidth="500" spacing="5">
               <children>
                  <Label text="Introduzca la descripción del gasto:" />
                  <TextArea maxWidth="Infinity" prefRowCount="3" wrapText="true" />
               </children>
            </VBox>
            
            <VBox maxWidth="500" spacing="5">
               <children>
                  <Label text="Elija la categoría del gasto:" />
                  <MenuButton maxWidth="200" mnemonicParsing="false" text="Categorias">
                     <items>
                        <CheckMenuItem mnemonicParsing="false" text="categoria 1" />
                        <CheckMenuItem mnemonicParsing="false" text="categoria 2" />
                        <CheckMenuItem mnemonicParsing="false" text="categoria 3" />
                     </items>
                  </MenuButton>
               </children>
            </VBox>
            
            <VBox maxWidth="500" spacing="5">
               <children>
                  <Label text="Elija qué persona realizó el gasto:" />
                  <MenuButton maxWidth="200" mnemonicParsing="false" text="Personas">
                     <items>
                        <CheckMenuItem mnemonicParsing="false" text="Persona 1" />
                        <CheckMenuItem mnemonicParsing="false" text="Persona 2" />
                        <CheckMenuItem mnemonicParsing="false" text="Persona 3" />
                     </items>
                  </MenuButton>
               </children>
            </VBox>
            
            <HBox alignment="CENTER">
               <padding>
                  <Insets top="10" />
               </padding>
               <children>
                  <Button fx:id="atras" mnemonicParsing="false" onAction="#atras" text="Atrás" translateX="-100.0" />
                  <Button fx:id="crearGasto" mnemonicParsing="false" onAction="#crearGasto" text="Aceptar" translateX="80.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
