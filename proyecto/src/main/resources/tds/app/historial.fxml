<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tds.vista.MostrarHistorialController">
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>
   <children>
      <TableView fx:id="tablaNotificaciones" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colId" prefWidth="70.0" text="Id" />
            <TableColumn fx:id="colMensaje" prefWidth="280.0" text="Mensaje" />
            <TableColumn fx:id="colFecha" prefWidth="140.0" text="Fecha" />
            <TableColumn fx:id="colAlerta" prefWidth="120.0" text="Alerta" />
            <TableColumn fx:id="colLeida" prefWidth="70.0" text="Leída" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      
      <HBox alignment="CENTER" spacing="10">
         <children>
            <Button mnemonicParsing="false" onAction="#marcarSeleccionada" text="Marcar seleccionada como leída" />
            <Button mnemonicParsing="false" onAction="#marcarTodas" text="Marcar todas como leídas" />
            <Button mnemonicParsing="false" onAction="#eliminarSeleccionada" text="Eliminar seleccionada" />
            <Button fx:id="atras" mnemonicParsing="false" onAction="#atras" text="Atrás" />
         </children>
      </HBox>
   </children>
</VBox>
