<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="tds.vista.MostrarHistorialController">
   <padding>
      <Insets top="10" right="10" bottom="10" left="10" />
   </padding>
   <children>
      <TableView VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn text="id" prefWidth="50.0" />
            <TableColumn text="Mensaje" prefWidth="200.0" />
            <TableColumn text="FechaHora" prefWidth="120.0" />
            <TableColumn text="Alerta" prefWidth="100.0" />
            <TableColumn text="Leida" prefWidth="60.0" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="mostrarHistorial" mnemonicParsing="false" 
                    onAction="#mostrarHistorial" text="Volver" />
         </children>
      </HBox>
   </children>
</VBox>
